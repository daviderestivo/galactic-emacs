;; Galactic Emacs personal.el configuration file.
;;
;; This file is part of the Galactic Emacs configuration. Feel free to
;; drop me an email in case of questions or if you want to
;; collaborate.


;;; Code:
;; Personal details
(setq user-mail-address      "MyEmail@MyDomain.com"
      user-full-name         "MyName MySurname"
      user-login-name        "MyAlias"
      gpg-key                "12345ABC"
      calendar-latitude      47.41566
      calendar-longitude     8.5417
      calendar-location-name "Zurich, CH")

;; Additional git repositories
(setq galactic-emacs-magit-custom-repository-directories
      (list '("~/MyRepo1" . 1)
            '("~/MyRepo2" . 1)))

;; Your github username
(setq galactic-emacs-github-username
      "MyNameMySurname")

;; Your libera username and password
(setq libera-login-username "MyLiberaUsername"
      libera-login-password "MyLiberaPassword")

;; Join some interesting channels when connecting to Freenode
(setq erc-autojoin-channels-alist '(("libera"
                                     "#emacs" "#emacs-berlin" "#clojure" "#lisp")))

(setq galactic-emacs-gptel-directives
      '((default  . "You are a helpful and concise assistant.")
        (elisp    . "You are an expert in Emacs Lisp. You provide correct, idiomatic, and
well-commented code. You prefer modern Emacs Lisp practices, such as
using 'pcase' and lexical binding. Your answers should be direct and
focused on the user's question.")
        (cs-tutor . "You are a knowledgeable and patient computer science tutor. Explain
concepts clearly with step-by-step reasoning, structured answers, and
examples (code, math, or diagrams) when useful. Be concise but thorough,
and suggest related topics I could explore.")
        (plain    . ""))) ; An empty prompt for a neutral conversation


;;; personal.el ends here
